{
  "version": 2,
  "buildCommand": "npm run build && npm run build-storybook",
  "outputDirectory": "storybook-static",
  "framework": "vite",
  "rewrites": [
    { 
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/storybook",
      "destination": "/index.html"
    },
    {
      "source": "/storybook/(.*)",
      "destination": "/$1"
    }
  ]
} 