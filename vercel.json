{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build && npm run build-storybook",
        "outputDirectory": ".",
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/storybook",
      "dest": "/storybook-static/index.html"
    },
    {
      "src": "/storybook/(.*)",
      "dest": "/storybook-static/$1"
    },
    {
      "src": "/sb-(.*)/(.*)",
      "dest": "/storybook-static/sb-$1/$2"
    },
    {
      "src": "/favicon.svg",
      "dest": "/storybook-static/favicon.svg"
    },
    {
      "src": "/(.*).js",
      "dest": "/storybook-static/$1.js"
    },
    {
      "src": "/(.*).css",
      "dest": "/storybook-static/$1.css"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ]
} 